{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["dom", "es2019"],
    "module": "ESNext",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "strict": true,
    "target": "es2018"
  },
  "include": [
    "src/**/*.ts",
    "./node_modules/svelte/types/**/*.d.ts",
    "./node_modules/vite/client/**/*.d.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "dist-vite",
    "vite.config.ts"
  ]
}
